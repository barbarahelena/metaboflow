{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/barbarahelena/gapseqflow/master/assets/schema_input.json",
    "title": "gapseqflow pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "assembler": {
                "type": "string",
                "enum": ["MEGAHIT", "SPAdes"],
                "errorMessage": "Assembler must be either 'MEGAHIT' or 'SPAdes'",
                "meta": ["assembler"]
            },
            "fasta": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.f(ast)?a$",
                "errorMessage": "FASTA file must be provided, cannot contain spaces and must have extension '.fa' or '.fasta'"
            }
        },
        "required": ["sample", "fasta"]
    }
}
