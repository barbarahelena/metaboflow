{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/barbarahelena/metaboflow/master/assets/schema_bins.json",
    "title": "metaboflow pipeline - bins input schema",
    "description": "Schema for the bins samplesheet",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "bin_id": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Bin ID must be provided and cannot contain spaces",
                "meta": ["bin_id"]
            },
            "bin_fasta": {
                "type": "string",
                "pattern": "^\\S+\\.fasta$|^\\S+\\.fa$|^\\S+\\.fna$",
                "errorMessage": "Bin FASTA file path must be provided and end with .fasta, .fa, or .fna"
            },
            "checkm_completeness": {
                "type": "number",
                "minimum": 0,
                "maximum": 100,
                "errorMessage": "CheckM completeness must be a number between 0 and 100",
                "meta": ["checkm_completeness"]
            },
            "checkm_contamination": {
                "type": "number",
                "minimum": 0,
                "errorMessage": "CheckM contamination must be a number greater than or equal to 0",
                "meta": ["checkm_contamination"]
            }
        },
        "required": ["bin_id", "bin_fasta", "checkm_completeness", "checkm_contamination"]
    }
}